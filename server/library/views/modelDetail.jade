extends layout

block content
	.container-fluid
		.row
			.col-md-12
				a(href="/lib/model/brand") 品牌
				span &nbsp;/&nbsp;
				a(href="/lib/model/brand/#{model.model.makerLabel}") #{model.model.makerLabel}
				span #{' / '+model.model.label+' '+model.model.yearStart+'-'+model.model.yearEnd}
		.row.searchResultContainer
			.col-md-12
				.row
					.col-md-12
						.carousel.slide#myCarousel(data-ride="carousel")
							ol.carousel-indicators
								each img,index in model.gallery
									if (index===0)
										li.active(data-targer="#myCarousel" data-slide-to="#{index}")
									else
										li(data-targer="#myCarousel" data-slide-to="#{index}")
							.carousel-inner(role="listbox")
								each img,index in model.gallery
									if (index===0)
										.item.active
											img(src="/img/web/"+img.picFileName)
									else
										.item
											img(src="/img/web/"+img.picFileName)

				.row
					.col-md-12
						if (typeof(model)!=='undefined')
							ul
								li=model.label
								li=model.makerLabel
				

